---
layout: with-navbar.njk
---

<div class="container mx-auto max-w-4xl px-4 py-8">
    <div class="prose prose-lg max-w-none">
        {{ content | safe }}
    </div>
</div>
<!-- Related Case Studies -->
<div class="bg-gradient-to-b from-base to-primary/20 py-16">
    <div class="container mx-auto max-w-6xl px-4">
        <h2 class="text-3xl font-bold text-center mb-12">More Case Studies</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for study in collections.caseStudies | limit(3) %}
                {% if study.url != page.url %}
                    <div class="card bg-base-100 shadow-lg">
                        <div class="card-body">
                            <h3 class="card-title text-lg">{{ study.data.title }}</h3>
                            <p class="text-sm text-base-content/70 mb-2">{{ study.data.client }} â€¢ {{ study.data.industry }}</p>
                            <p class="text-base-content/80 line-clamp-3">{{ study.data.description }}</p>
                            <div class="card-actions justify-end mt-4">
                                <a href="{{ study.url }}" class="btn btn-primary btn-sm">Read Case Study</a>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
<!-- CTA Section -->
<div class="hero bg-primary/20 py-16">
    <div class="hero-content text-center">
        <div class="max-w-2xl">
            <h2 class="text-3xl font-bold mb-4">Ready to Transform Your Business?</h2>
            <p class="text-lg text-base-content/80 mb-6">
                Let's discuss how we can help solve your unique challenges and accelerate your growth.
            </p>
            <a href="mailto:hello@inflection.engineering?subject=Case%20Study%20Inquiry" class="btn btn-primary btn-lg">
                Start Your Journey
            </a>
        </div>
    </div>
</div>